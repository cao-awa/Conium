{
  "schemaVersion": 1,
  "id": "conium",
  "version": "${version}",
  "name": "Conium",
  "description": "Conium is a datapack and script framework for modern Minecraft, it provides very diverse features without Java coding, Conium lets you complete your mods only using datapacks.",
  "authors": [
    "cao_awa",
    "草二号机"
  ],
  "contributors": [
    "cao_awa",
    "草二号机",
    "Ryan 100c"
  ],
  "contact": {
    "homepage": "https://modrinth.com/mod/conium",
    "sources": "https://github.com/cao-awa/Conium",
    "issues": "https://github.com/cao-awa/Conium/issues"
  },
  "custom": {
    "modmenu": {
      "links": {
        "modmenu.discord": "https://discord.gg/BUY2xQr37N"
      }
    }
  },
  "accessWidener": "conium.accesswidener",
  "license": "GPL-3.0",
  "icon": "assets/conium/icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      "com.github.cao.awa.coniumic.Coniumic"
    ],
    "client": [
      "com.github.cao.awa.coniumic.ConiumicClient"
    ],
    "server": [
      "com.github.cao.awa.coniumic.ConiumicServer"
    ]
  },
  "mixins": [
    "conium.mixins.json"
  ],
  "depends": {
    "fluxia": "1.1.4-fix4",
    "fabricloader": "*",
    "fabric-language-kotlin": "1.13.4+kotlin.2.2.0",
    "minecraft": ">=1.21.6",
    "java": ">=21",
    "fabric": "*"
  },
  "recommends": {
    "lithium": "*",
    "sepals": ">=1.0.21-FIX",
    "annuus": ">=1.0.11-SNAPSHOT"
  },
  "breaks": {
    "optifabric": "*"
  },
  "jars": [
    {
      "file": "META-INF/jars/fluxia-1.1.4-fix3.jar"
    }
  ]
}
