{
  "schemaVersion": 1,
  "id": "conium",
  "version": "${version}",
  "name": "Conium",
  "description": "Conium is a datapack and script framework for modern Minecraft, it provides very diverse features without Java coding, Conium lets you complete your mods only using datapacks.",
  "authors": [
    "cao_awa",
    "草二号机"
  ],
  "contributors": [
    "cao_awa",
    "草二号机",
    "Ryan 100c",
    "Fairydewstz"
  ],
  "contact": {
    "homepage": "https://modrinth.com/mod/conium",
    "sources": "https://github.com/cao-awa/Conium",
    "issues": "https://github.com/cao-awa/Conium/issues"
  },
  "custom": {
    "modmenu": {
      "links": {
        "modmenu.discord": "https://discord.gg/BUY2xQr37N"
      }
    }
  },
  "accessWidener": "conium.accesswidener",
  "license": "GPL-3.0",
  "icon": "assets/conium/icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      "com.github.cao.awa.conium.ConiumFabric"
    ],
    "client": [
      "com.github.cao.awa.conium.ConiumicClient"
    ],
    "server": [
      "com.github.cao.awa.conium.ConiumicServer"
    ]
  },
  "mixins": [
    "conium.mixins.json",
    "conium-fabric.mixins.json"
  ],
  "depends": {
    "fabricloader": "*",
    "fabric-language-kotlin": "1.13.5+kotlin.2.2.10",
    "minecraft": "1.21.11",
    "java": ">=21",
    "fabric": "*"
  },
  "recommends": {
    "lithium": "*",
    "sepals": ">=1.0.30",
    "annuus": ">=1.0.15-fix2"
  },
  "breaks": {
    "optifabric": "*"
  }
}
