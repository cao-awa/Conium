{
  "schemaVersion": 1,
  "id": "conium",
  "version": "${version}",
  "name": "Conium",
  "description": "Conium is a datapack and script framework for modern Minecraft, it provides very diverse features without Java coding, Conium lets you complete your mods only using datapacks.",
  "authors": [
    "cao_awa",
    "草二号机"
  ],
  "contributors": [
    "cao_awa",
    "草二号机",
    "Ryan 100c"
  ],
  "contact": {
    "homepage": "https://github.com/cao-awa/Conium",
    "sources": "https://github.com/cao-awa/Conium",
    "issues": "https://github.com/cao-awa/Conium/issues"
  },
  "license": "GPL-3.0",
  "icon": "assets/conium/icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      "com.github.cao.awa.conium.Conium"
    ],
    "server": [
      "com.github.cao.awa.conium.ConiumServerInitializer"
    ],
    "client": [
      "com.github.cao.awa.conium.ConiumClientInitializer"
    ]
  },
  "mixins": [
    "conium.mixins.json"
  ],
  "depends": {
    "fluxia": "1.1.0-fix3",
    "fabricloader": "*",
    "fabric-language-kotlin": "1.13.0+kotlin.2.1.0",
    "minecraft": "1.21.4",
    "java": "21"
  },
  "recommends": {
    "fabric": "*",
    "lithium": "*",
    "sepals": ">=1.0.9",
    "sodium": "*"
  },
  "breaks": {
    "optifabric": "*"
  },
  "jars": [
    {
      "file": "META-INF/jars/fluxia-1.1.0-fix3.jar"
    }
  ]
}
